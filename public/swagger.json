          },
          {
            "name": "endpointId",
            "in": "path",
            "description": "A string representing the share link endpoint's unique identifier.",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Get Share Link",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/shlinks/{id}/endpoints": {
      "post": {
        "tags": [
          "Share Link Endpoints"
        ],
        "description": "Create a share link endpoint.",
        "parameters": [
